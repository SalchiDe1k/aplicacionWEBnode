<!-- edit-producto.ejs -->

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Producto</title>
    <!-- Agrega aquÃ­ tus enlaces a CSS o scripts si es necesario -->
</head>
<body>
    <h1>Editar Producto</h1>
    
    <!-- Formulario para editar producto -->
    <form action="/admin/productos/<%= producto.id %>/edit" method="post">
        <label for="productname">Nombre del Producto:</label>
        <input type="text" id="productname" name="productname" value="<%= producto.productname %>" required>
        
        <label for="costprice">Precio de Costo:</label>
        <input type="number" id="costprice" name="costprice" value="<%= producto.costprice %>" required>
        
        <label for="sellprice">Precio de Venta:</label>
        <input type="number" id="sellprice" name="sellprice" value="<%= producto.sellprice %>" required>
        
        <label for="brand">Marca:</label>
        <input type="text" id="brand" name="brand" value="<%= producto.brand %>" required>
        
        <button type="submit">Actualizar Producto</button>
    </form>

</body>
</html>
